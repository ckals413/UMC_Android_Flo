        <me.relex.circleindicator.CircleIndicator3
            android:id="@+id/home_pannel_indicator"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            app:ci_drawable_unselected="@drawable/gray_radius"
            app:ci_drawable="@drawable/blue_radius"
            app:ci_animator="@animator/scale_with_alpha"
            app:layout_constraintTop_toBottomOf="@id/home_recommend_vp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/home_recommend_vp"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:layout_marginTop="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />


        <TextView
            android:id="@+id/home_today_music_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘 발매 음악"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_recommend_vp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/black"

            />

        <ImageButton
            android:id="@+id/home_today_music_title_btn_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/btn_main_arrow_more"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toBottomOf="@+id/home_recommend_vp"
            app:layout_constraintStart_toEndOf="@+id/home_today_music_title_tv"
            app:layout_constraintBottom_toBottomOf="@id/home_today_music_title_tv"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/home_today_music_oversea_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="해외"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_recommend_vp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            />

        <TextView
            android:id="@+id/home_today_music_domastic_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:text="국내"
            android:textSize="13sp"
            app:layout_constraintEnd_toStartOf="@+id/home_today_music_oversea_tv"
            app:layout_constraintTop_toBottomOf="@+id/home_recommend_vp"
            />


        <TextView
            android:id="@+id/home_today_music_total_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:text="종합"
            android:textSize="13sp"
            app:layout_constraintEnd_toStartOf="@+id/home_today_music_domastic_tv"
            app:layout_constraintTop_toBottomOf="@+id/home_recommend_vp"
            android:textColor="#000080"
            />


        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/horizontalScrollView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_today_music_title_tv"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_today_music_constraint_cs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                >
                <ImageView
                    android:id="@+id/home_today_album1_iv"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/img_album_exp2"

                    />

                <TextView
                    android:id="@+id/home_today_album1_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LILAC"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/home_today_album1_iv"
                    app:layout_constraintTop_toBottomOf="@+id/home_today_album1_iv"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:id="@+id/home_today_album1_singer_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아이유(IU)"
                    app:layout_constraintStart_toStartOf="@+id/home_today_album1_iv"
                    app:layout_constraintTop_toBottomOf="@+id/home_today_album1_title_tv"
                    android:layout_marginTop="2dp"
                    android:textColor="#A9A9A9"
                    />

                <ImageView
                    android:id="@+id/home_today_album2_iv"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:layout_constraintStart_toEndOf="@id/home_today_album1_iv"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/img_album_exp3"


                    />

                <TextView
                    android:id="@+id/home_today_album2_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내일의 우리"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/home_today_album2_iv"
                    app:layout_constraintTop_toBottomOf="@+id/home_today_album2_iv"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:id="@+id/home_today_album2_singer_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="카더가든"
                    app:layout_constraintStart_toStartOf="@+id/home_today_album2_iv"
                    app:layout_constraintTop_toBottomOf="@+id/home_today_album2_title_tv"
                    android:layout_marginTop="2dp"
                    android:textColor="#A9A9A9"
                    />

                <ImageView
                    android:id="@+id/home_today_album3_iv"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:layout_constraintStart_toEndOf="@id/home_today_album2_iv"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/img_album_exp2"

                    />

                <TextView
                    android:id="@+id/home_today_album3_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="노래 제목"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/home_today_album3_iv"
                    app:layout_constraintTop_toBottomOf="@+id/home_today_album3_iv"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:id="@+id/home_today_album3_singer_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가수 이름"
                    app:layout_constraintStart_toStartOf="@+id/home_today_album3_iv"
                    app:layout_constraintTop_toBottomOf="@+id/home_today_album3_title_tv"
                    android:layout_marginTop="2dp"
                    android:textColor="#A9A9A9"
                    />

                <ImageView
                    android:id="@+id/home_today_album4_iv"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:layout_constraintStart_toEndOf="@id/home_today_album3_iv"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/img_album_exp3"

                    />

                <TextView
                    android:id="@+id/home_today_album4_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="노래 제목"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/home_today_album4_iv"
                    app:layout_constraintTop_toBottomOf="@+id/home_today_album4_iv"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:id="@+id/home_today_album4_singer_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가수 이름"
                    app:layout_constraintStart_toStartOf="@+id/home_today_album4_iv"
                    app:layout_constraintTop_toBottomOf="@+id/home_today_album4_title_tv"
                    android:layout_marginTop="2dp"
                    android:textColor="#A9A9A9"
                    />




            </androidx.constraintlayout.widget.ConstraintLayout>
        </HorizontalScrollView>
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/home_banner_vp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
            />
        <me.relex.circleindicator.CircleIndicator3
            android:id="@+id/home_banner_indicator"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            app:ci_drawable_unselected="@drawable/gray_radius"
            app:ci_drawable="@drawable/blue_radius"
            app:ci_animator="@animator/scale_with_alpha"
            app:layout_constraintTop_toBottomOf="@id/home_banner_vp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>






